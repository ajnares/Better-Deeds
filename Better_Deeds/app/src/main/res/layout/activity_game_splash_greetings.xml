<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameSplashGreetings">

    <ImageView
            android:layout_width="211dp"
            android:layout_height="206dp"
            app:srcCompat="@drawable/gude"
            android:id="@+id/imgView_Character"

            tools:layout_editor_absoluteY="200dp"
            tools:layout_editor_absoluteX="100dp"
            tools:ignore="MissingConstraints"
    />
    <TextView
            android:text="INTRO/GREETINGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGreetings"

            app:layout_constraintTop_toBottomOf="@+id/imgView_Character"
            app:layout_constraintEnd_toEndOf="@+id/imgView_Character"
            app:layout_constraintStart_toStartOf="@+id/imgView_Character"
            android:layout_marginTop="50dp"
            tools:ignore="MissingConstraints"
    />





</androidx.constraintlayout.widget.ConstraintLayout>