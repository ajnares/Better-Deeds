<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameplayProper">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/gude"
            android:id="@+id/imgSelectedCharacter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
    />
    <TextView
            android:text="Situation"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/txtSituation"
            android:background="#213e3b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgSelectedCharacter"
            android:layout_marginTop="60dp"
            android:textColor="#ffffff"
            app:layout_constraintHorizontal_bias="0.494"
    />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tiredgude"
            android:id="@+id/imgSituation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="250dp"
            app:layout_constraintHorizontal_bias="0.491"
    />

    <Button
            tools:ignore="MissingConstraints"
            android:text="YES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnYes"
            app:layout_constraintStart_toStartOf="@+id/imgSituation"
            app:layout_constraintEnd_toStartOf="@+id/btnNo"
            app:layout_constraintHorizontal_bias="0.404"
            app:layout_constraintTop_toBottomOf="@+id/imgSituation"
            android:layout_marginTop="68dp"/>
    <Button
            android:text="NO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNo"
            app:layout_constraintTop_toBottomOf="@+id/imgSituation"
            app:layout_constraintEnd_toEndOf="@+id/imgSituation"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="52dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>