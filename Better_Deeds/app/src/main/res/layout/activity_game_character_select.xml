<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".GameCharacterSelect">

    <TextView
            android:text="@string/select_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCharacter"
            android:fontFamily="@font/little_zombie"
            android:textSize="30sp"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.498"
    />

    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/gude"
            android:id="@+id/imgChar_ONE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCharacter"
            app:layout_constraintEnd_toStartOf="@+id/imgChar_THREE"
            app:layout_constraintHorizontal_bias="0.386"
            android:layout_marginTop="60dp"
            android:backgroundTint="#00000000"
    />
    <TextView
            android:text="CHARACTER ONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNameONE"
            app:layout_constraintTop_toBottomOf="@+id/imgChar_ONE"
            app:layout_constraintStart_toStartOf="@+id/imgChar_ONE"
            app:layout_constraintEnd_toEndOf="@+id/imgChar_ONE"
            android:layout_marginTop="20dp"

            android:fontFamily="@font/little_zombie"
            android:textSize="22sp"

    />

    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/select_invincible"
            android:id="@+id/imgChar_THREE"
            app:layout_constraintTop_toBottomOf="@+id/txtCharacter"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
            android:backgroundTint="#00000000"
            android:layout_marginEnd="32dp"
    />
    <TextView
            android:text="INVINCIBLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNameThree"
            app:layout_constraintTop_toBottomOf="@+id/imgChar_THREE"
            app:layout_constraintStart_toStartOf="@+id/imgChar_THREE"
            app:layout_constraintEnd_toEndOf="@+id/imgChar_THREE"
            android:layout_marginTop="20dp"

            android:fontFamily="@font/little_zombie"
            android:textSize="22sp"
    />

    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/gude"
            android:id="@+id/imgChar_TWO"
            app:layout_constraintTop_toBottomOf="@+id/txtCharacter"
            app:layout_goneMarginLeft="50dp"
            android:layout_marginTop="270dp"
            android:backgroundTint="#00000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="CHARCTER TWO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNameTWO"
            app:layout_constraintTop_toBottomOf="@+id/imgChar_TWO"
            app:layout_constraintStart_toStartOf="@+id/imgChar_TWO"
            app:layout_constraintEnd_toEndOf="@+id/imgChar_TWO"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.604"

            android:fontFamily="@font/little_zombie"
            android:textSize="22sp"
    />

    <androidx.appcompat.widget.AppCompatButton
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"

            app:layout_constraintTop_toBottomOf="@+id/txtNameTWO"

            app:layout_constraintEnd_toEndOf="@id/imgChar_TWO"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>